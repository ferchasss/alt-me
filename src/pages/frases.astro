---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Frases Flotantes">
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            background-color: #000000;
            min-height: 100vh;
            overflow: hidden;
            position: relative;
        }

        .frase {
            position: absolute;
            color: #CCFF00;
            font-family: 'Arial', sans-serif;
            font-size: 24px;
            white-space: nowrap;
            animation: flotar 15s linear infinite;
            opacity: 0.8;
            pointer-events: none;
            z-index: 1;
        }

        @keyframes flotar {
            0% {
                transform: translateY(100vh) translateX(0);
            }
            100% {
                transform: translateY(-100px) translateX(100px);
            }
        }
    </style>

    <div id="frases-container"></div>

    <script is:inline>
        document.addEventListener('DOMContentLoaded', () => {
            const frases = [
                "Sé el cambio que quieres ver",
                "Cada día es una nueva oportunidad",
                "La vida es una aventura",
                "Sueña en grande",
                "Cree en ti mismo",
                "El límite es el cielo",
                "Hazlo posible",
                "Nunca es tarde",
                "Sé valiente",
                "Persigue tus sueños"
            ];

            const container = document.getElementById('frases-container');

            function crearFrase() {
                const frase = document.createElement('div');
                frase.className = 'frase';
                frase.textContent = frases[Math.floor(Math.random() * frases.length)];
                frase.style.left = Math.random() * window.innerWidth + 'px';
                frase.style.animationDuration = (10 + Math.random() * 10) + 's';
                container.appendChild(frase);

                frase.addEventListener('animationend', () => {
                    frase.remove();
                });
            }

            // Crear frases iniciales
            for (let i = 0; i < 5; i++) {
                crearFrase();
            }

            // Crear nuevas frases cada 2 segundos
            setInterval(crearFrase, 2000);
        });
    </script>
</Layout> 