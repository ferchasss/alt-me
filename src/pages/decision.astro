---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Soy todas y ninguna">
  <div class="min-h-screen bg-black flex flex-col items-center justify-center p-4 md:p-8">
    <h1 class="text-3xl md:text-4xl lg:text-6xl text-white mb-8 md:mb-16 text-center font-bold px-4">
      Soy todas y ninguna
    </h1>
    
    <div class="flex flex-col md:flex-row gap-4 md:gap-8 w-full max-w-2xl px-4">
      <button 
        onclick="window.location.href='/espejo'" 
        class="w-full bg-white text-black px-6 md:px-8 py-3 md:py-4 rounded-full text-lg md:text-xl font-bold hover:bg-gray-200 transition-colors"
      >
        Sí, quédate
      </button>
      <button 
        onclick="window.location.href='/'" 
        class="w-full bg-white text-black px-6 md:px-8 py-3 md:py-4 rounded-full text-lg md:text-xl font-bold hover:bg-gray-200 transition-colors"
      >
        No, vuelve a dormir
      </button>
    </div>
  </div>
</Layout>

<style>
  /* Asegurar que los botones sean clickeables en dispositivos táctiles */
  button {
    -webkit-tap-highlight-color: transparent;
    touch-action: manipulation;
  }
</style> 