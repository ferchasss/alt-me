---
import { Image } from 'astro:assets'; // Importa el componente Image

interface Props {
    title: string;
    description: string;
    image: ImageMetadata; // Define la prop 'image' con el tipo correcto para astro:assets
}

// Destructura las props
const { title, description, image } = Astro.props;
---

<div class="gallery-card flex-shrink-0 w-64 h-80 rounded-lg overflow-hidden shadow-lg bg-gray-800 text-white relative">
    {/* Usa el componente Image */}
    <Image src={image} alt={title} width={256} height={192} class="w-full h-48 object-cover" /> {/* Añadimos width/height recomendados por Astro */}
    <div class="p-4">
        <h3 class="text-lg font-bold mb-1">{title}</h3>
        <p class="text-sm text-gray-300">{description}</p>
    </div>
</div>

<!-- No hay <style> ni <script> aquí a menos que necesites estilos o JS específicos para CADA tarjeta individualmente. Los estilos generales de la galería van en entendiste.astro o en tu CSS global. -->